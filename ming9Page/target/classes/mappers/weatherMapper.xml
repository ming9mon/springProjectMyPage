<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="weatherMapper">

	<select id="getMidArea" resultType="string">
		SELECT DISTINCT AREA 
		FROM MID_TURN_TPT;
	</select>
	
	<select id="getMidCity" resultType="string">
		<![CDATA[
			SELECT CITY
			FROM MID_TURN_TPT
			WHERE AREA = #{area};
		]]>
	</select>
	
	<select id="getMidForecastCode" resultType="string">
		<![CDATA[
			SELECT CODE
			FROM MID_TURN_FORECAST
			WHERE AREA = #{area};
		]]>
	</select>
	
	<select id="getMidTPTCode" resultType="string">
		<![CDATA[
			SELECT CODE
			FROM MID_TURN_TPT
			WHERE CITY = #{city};
		]]>
	</select>
	
</mapper>